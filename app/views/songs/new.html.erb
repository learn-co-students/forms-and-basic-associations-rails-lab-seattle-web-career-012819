<h1>Create a Song</h1>

<%= form_for @song  do |f| %>
  <%= f.label :title %><%= f.text_field :title %>
  <%= f.label :artist_name %><%= f.text_field :artist_name %>
  <%= f.label :genre%>
  <%= f.collection_select(:genre_id, Genre.all.sort_by(&:name), :id, :name) %>
  <br />
  <textarea name="song[notes][]" rows="8" cols="80" id="song_notes_1"></textarea>
  <br />
  <textarea name="song[notes][]" rows="8" cols="80" id="song_notes_2"></textarea>
  <br />
  <textarea name="song[notes][]" rows="8" cols="80" id="song_notes_3"></textarea>

  <%= f.submit %>
<% end %>
